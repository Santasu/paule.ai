{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": false,

  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs22.x",
      "memory": 512,
      "maxDuration": 30
    }
  },

  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ],

  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/", "destination": "/public/index.html" },
    { "source": "/((?!api/).*)", "destination": "/public/$1" }
  ]
}
