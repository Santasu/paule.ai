{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "cleanUrls": true,
  "trailingSlash": false,

  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs20.x",
      "memory": 512,
      "maxDuration": 60
    }
  },

  "rewrites": [
    { "source": "/api/paule/:path*", "destination": "/api/:path*" },
    { "source": "/:path*", "destination": "/index.html" }
  ],

  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
