{
  "version": 2,
  "framework": null,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "public/**",   "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "^/api/(.*)$", "dest": "/api/$1.js" },

    { "src": "^/wp-json/(?:augam|paule)/v1/(.*)$", "dest": "/api/$1" },
    { "src": "^/(?:augam|paule)/v1/(.*)$",         "dest": "/api/$1" },

    { "handle": "filesystem" },

    { "src": "^/$", "dest": "/index.html" },
    { "src": "^(?!/api)(.*)$", "dest": "$1" }
  ]
}
