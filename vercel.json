{
  "version": 2,
  "framework": null,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "handle": "filesystem" },

    // --- SPA fallback (viskas kas NE /api ir nÄ—ra tikras failas) -> index.html
    { "src": "^(?!/api)(?!/_static)(?!/_next)(?!/assets)(?!/spec)(?!/favicon\\.ico)(?!/robots\\.txt)(/.*)$", "dest": "/index.html" }
  ]
}
